/**
 * 各種ペリフェラルの初期化
 *
 * @param  void
 * @return void
 */
void init(void) {
	//IOポートの初期化
	initIO();
	//LEDを一回だけ点滅させる
	turnLED(1);
	wait1msec(500);
	turnLED(0);
	wait1msec(500);
	//各ペリフェラルの初期化
	USBIOClkConfig();
	initTimer32_0();
	//initTimer32_1();
	Init_ad();
	//SSPInit();
	USB_Init();
	UARTInit(115200);
	while (!I2CInit((uint32_t) I2CMASTER)); // I2Cの初期化が終わるまで待つ
	//9軸センサの初期化
//	initMPU6050();
//	initAK8975();
//	initOmegaRef();  //ジャイロのリファレンスを取得
	//UIの初期化
	initUI();
	initMainFunction();
	//setSendDataEnable(1);
}

